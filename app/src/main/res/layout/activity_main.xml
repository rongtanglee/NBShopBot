<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSimulatorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulator ID"
            android:layout_alignBaseline="@+id/etSimulatorID"/>
        <EditText
            android:id="@+id/etSimulatorID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvSimulatorID"/>
        <TextView
            android:id="@+id/tvChatSessionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSimulatorID"
            android:text="Chat Session ID"
            android:layout_alignBaseline="@+id/etChatSessionID"/>
        <EditText
            android:id="@+id/etChatSessionID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvChatSessionID"
            android:layout_below="@+id/etSimulatorID"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvChatSessionID"
            android:text="Message"
            android:layout_alignBaseline="@+id/etMessage"/>
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvMessage"
            android:layout_below="@+id/etChatSessionID"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnCreateSimulator"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create Simulator"/>

    <Button
        android:id="@+id/btnCreateChat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create Chat"/>

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send Message"/>

    <Button
        android:id="@+id/btnUpdateSimulator"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Update Simulator"/>

</LinearLayout>
